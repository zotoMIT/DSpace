<p>Showing records {{shownStart}}-{{shownCount}} of {{total}}</p>
<ul class="import-records-modal">
    <li>
        <ul>
            {{#each records}}
                <li {{#if record.[imported]}}class="imported"{{/if}}>
                    {{#unless record.[dc.title]}}
                        <span class="bold">No title available</span>
                    {{/unless}}
                    {{#each record.[dc.title]}}
                        {{#ifCond @index "==" 0}}<span class="bold">{{this}}</span> {{/ifCond}}
                    {{/each}}
                </li>
                <li {{#if record.[imported]}}class="imported"{{/if}}>
                    {{#unless record.[dc.contributor.author]}}
                         <span>No author available</span>
                    {{/unless}}
                    {{#each record.[dc.contributor.author]}}
                        {{#ifCond @index "<" 5}} <span>{{this}}{{#unless @last}}; {{/unless}} </span>{{/ifCond}}
                        {{#ifCond @index "==" 5}}...{{/ifCond}}
                    {{/each}}
                </li>
                <li {{#if record.[imported]}}class="imported"{{/if}}>
                    {{#each record.[dc.type]}}
                        {{#ifCond @index "==" 0}}<span>{{this}}</span>{{/ifCond}}
                    {{/each}}
                </li>
                <li {{#if record.[imported]}}class="imported"{{/if}}>
                    {{#each record.[dc.identifier.doi]}}
                        {{#ifCond @index "==" 0}}<a href="https://doi.org/{{this}}" target="_blank" rel="noopener">{{this}}</a>{{/ifCond}}
                    {{/each}}
                </li>
                <li {{#if record.[imported]}}class="imported"{{/if}}>
                    <button id="records-import-{{record.[identifier]}}" class="ds-button-field btn btn-default records-import-btn float-right" name="import" type="submit">Import</button>
                </li>
            {{/each}}
        </ul>
    </li>
</ul>